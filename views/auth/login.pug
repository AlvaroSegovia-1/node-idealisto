extends ../layout/index 

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Idea
            span.font-normal listo
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 text-white").uppercase.text-xs.text-center.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-6.px-4.shadow
                form.space-y-5(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="password" type="password" name="password")

                    div.flex.justify-between
                        div
                            a.text-gray-500.text-sm(href="/auth/registro") ¿No tienes cuenta? Crea una.  
                        div
                            a.text-gray-500.text-sm(href="/auth/olvide-password") Olvide mi password.

                    input(class="w-full bg-indigo-600 hover:bg-indigo-300 text-white font-bold py-3 cursor-pointer" type="submit" value="Iniciar sesión")